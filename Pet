sing System;

public class Animal
{
    private string name;
    public string Name
    {
        get => name;
        set => name = value;
    }
    public Animal(string name)
    {
        Name = name;
    }
    public virtual void Speak()
    {
        Console.WriteLine($"{Name} издаёт звук.");
    }

    static void Main()
    {
        Cat cat1 = new Cat("Барсик", 7);
        Cat cat2 = new Cat("Мурка");

        cat1.Speak();
        cat2.Speak();

        cat1.Meow();
        cat2.Meow();
        cat1.Meow();

        cat1.Lives = 12;
        cat2.Lives = 5;

        cat1.Meow();
        cat2.Meow();
    }
}

public class Cat : Animal
{
    private int lives;
    public int Lives
    {
        get => lives;
        set
        {
            if (value >= 1 && value <= 9)
                lives = value;
            else
                Console.WriteLine("Количество жизней должно быть от 1 до 9!");
        }
    }
    public Cat(string name, int lives) : base(name)
    {
        Lives = lives;
    }
    public Cat(string name) : this(name, 9) { }
    public void Meow()
    {
        if (Lives > 1)
            Lives -= 1;
        Console.WriteLine($"{Name} мяукнул, осталось жизней: {Lives}.");
    }
}
