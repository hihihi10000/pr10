using System;

public class Animal
{
    private string name;
    
    public string Name
    {
        get { return name; }
        set { name = value; }
    }
    
    public Animal(string name)
    {
        Name = name;
    }
    
    public virtual void Speak()
    {
        Console.WriteLine($"{Name} издаёт звук.");
    }
}

public class Cat : Animal
{
    private int lives;
    
    public int Lives
    {
        get { return lives; }
        set
        {
            if (value >= 1 && value <= 9)
            {
                lives = value;
            }
            else
            {
                Console.WriteLine("Количество жизней должно быть от 1 до 9!");
            }
        }
    }
    
    public Cat(string name, int lives) : base(name)
    {
        Lives = lives;
    }
    
    public Cat(string name) : this(name, 9)
    {
    }
    
    public void Meow()
    {
        if (Lives > 1)
        {
            Lives -= 1;
        }
        Console.WriteLine($"{Name} мяукнул, осталось жизней: {Lives}.");
    }
    
    static void Main()
    {
        Cat cat1 = new Cat("Мурзик", 9);
        Cat cat2 = new Cat("Барсик");
        
        cat1.Speak();
        cat1.Meow();
        
        cat2.Speak();
        cat2.Meow();
    }
}
